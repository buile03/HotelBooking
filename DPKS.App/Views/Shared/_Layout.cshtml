<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Hotel Booking</title>
    @Html.Partial("_Styles") <!-- Nhúng file CSS -->
</head>
<body data-bs-spy="scroll" data-bs-target=".navbar" data-bs-offset="100">

    @Html.Partial("_Header") <!-- Navbar -->

    <main role="main">
        @RenderBody() <!-- Nội dung trang con sẽ hiển thị ở đây -->
    </main>

    @Html.Partial("_Footer") <!-- Footer -->
    @Html.Partial("_Scripts") <!-- Nhúng file JS -->
</body>
</html>
