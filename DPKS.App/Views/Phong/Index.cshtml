@model List<DPKS.Model.Phong.ThongTinDanhSachPhongVm>
@using DPKS.Common.Enum
@using DPKS.Service
@using Microsoft.Extensions.DependencyInjection
@{
    ViewData["Title"] = "Phòng";
    ViewData["PageTitle"] = "Phòng/ Danh sách phòng";


}

<div class="container my-5">
    <!-- Form tìm kiếm -->
    <div class="card shadow-sm mb-5 p-4 bg-light rounded-3">
        <form asp-action="Search" method="post" class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Ngày nhận phòng</label>
                <input type="date" class="form-control" name="NgayNhanPhong" value="@(ViewBag.SearchRequest.NgayNhanPhong?.ToString("yyyy-MM-dd"))" >
            </div>
            <div class="col-md-3">
                <label class="form-label">Ngày trả phòng</label>
                <input type="date" class="form-control" name="NgayTraPhong" value="@(ViewBag.NgayTraPhong?.ToString("yyyy-MM-dd"))" >
            </div>
            <div class="col-md-2">
                <label class="form-label">Số lượng khách</label>
                <input type="number" class="form-control" name="SoLuongKhach" value="@(ViewBag.SoLuongKhach ?? 1)" min="1" max="4" >
            </div>
            @* <div class="col-md-2">
                <label class="form-label">Loại phòng</label>
                <select class="form-select" name="LoaiPhongId">
                    <option value="">Tất cả</option>
                    @if (ViewBag.LoaiPhong != null)
                    {
                        foreach (var lp in ViewBag.LoaiPhong)
                        {
                            <option value="@lp.Id">@lp.TenLoai</option>
                        }
                    }
                    else
                    {
                        <option disabled selected>Không có loại phòng</option>
                    }
                </select>
            </div> *@   
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
            </div>
        </form>
    </div>

    <!-- Thông báo lỗi -->
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }

    <!-- Danh sách phòng -->
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var phong in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm transition-all hover-shadow">
                    <img src="@(phong.AnhPhong.FirstOrDefault() != null ? "/images/room/" + phong.AnhPhong.FirstOrDefault() : "/images/room/default.png")"
                         class="card-img-top"
                         alt="@phong.SoPhong"
                         style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@phong.SoPhong</h5>
                        <p class="card-text"><strong>Loại phòng:</strong> @phong.Type</p>
                        <p class="card-text"><strong>Giá:</strong> @phong.Gia.ToString("C", new System.Globalization.CultureInfo("vi-VN")) / đêm</p>
                        <p class="card-text"><strong>Trạng thái:</strong> @enHelper.GetDescription(phong.TrangThaiPhong)</p>
                        <p class="card-text"><strong>Sức chứa:</strong> @phong.SoLuongKhach người</p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Detail" asp-route-id="@phong.PhongId" class="btn btn-outline-primary">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

