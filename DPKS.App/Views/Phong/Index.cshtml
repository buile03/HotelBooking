@model List<DPKS.Model.Phong.ThongTinDanhSachPhongVm>

@{
    ViewData["Title"] = "Danh sách phòng";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">

                    @* Hiển thị thông báo *@
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            @ViewBag.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i>
                            @ViewBag.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @* Form tìm kiếm (nếu có) *@
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <form method="get" asp-action="Index">
                                <div class="input-group">
                                    <input type="text" class="form-control" name="Keyword" placeholder="Tìm kiếm phòng..." value="@Context.Request.Query["searchTerm"]">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fas fa-search"></i> Tìm kiếm
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>

                    @if (Model != null && Model.Any())
                    {
                        @* Hiển thị dạng grid card *@
                        <div class="row">
                            @foreach (var phong in Model)
                            {
                                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                                    <div class="card h-100 shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <h5 class="card-title text-primary">
                                                    <i class="fas fa-bed"></i> Phòng @phong.SoPhong
                                                </h5>
                                                <span class="badge bg-info">@phong.Type</span>
                                            </div>

                                            <div class="mb-2">
                                                <strong class="text-success">
                                                    <i class="fas fa-dollar-sign"></i>
                                                    @phong.Gia.ToString("N0") VNĐ/đêm
                                                </strong>
                                            </div>

                                            <div class="mb-2">
                                                <span class="badge @(phong.TrangThaiPhong == DPKS.Common.Enum.enTrangThaiPhong.TRONG ? "bg-success" :
                                                                   phong.TrangThaiPhong ==DPKS.Common.Enum.enTrangThaiPhong.DADAT ? "bg-warning" : "bg-danger")">
                                                    @phong.TrangThaiPhong
                                                </span>
                                            </div>

                                            @if (phong.SoLuongKhach > 0)
                                            {
                                                <div class="mb-2">
                                                    <small class="text-muted">
                                                        <i class="fas fa-users"></i>
                                                        Số khách: @phong.SoLuongKhach người
                                                    </small>
                                                </div>
                                            }

                                            @if (phong.TienNghi != null && phong.TienNghi.Any())
                                            {
                                                <div class="mb-3">
                                                    <small class="text-muted d-block mb-1">
                                                        <i class="fas fa-star"></i> Tiện nghi:
                                                    </small>
                                                    <div class="amenities">
                                                        @foreach (var tienNghi in phong.TienNghi.Take(3))
                                                        {
                                                            <span class="badge bg-light text-dark me-1 mb-1">@tienNghi</span>
                                                        }
                                                        @if (phong.TienNghi.Count > 3)
                                                        {
                                                            <span class="badge bg-secondary">+@(phong.TienNghi.Count - 3) khác</span>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        </div>

                                        <div class="card-footer bg-transparent">
                                            <div class="btn-group w-100" role="group">
                                                <button type="button" class="btn btn-outline-primary btn-sm" onclick="viewDetails(@phong.PhongId)">
                                                    <i class="fas fa-eye"></i> Xem chi tiết
                                                </button>
                                                @if (phong.TrangThaiPhong == DPKS.Common.Enum.enTrangThaiPhong.TRONG)
                                                {
                                                    <button type="button" class="btn btn-primary btn-sm" onclick="bookRoom(@phong.PhongId)">
                                                        <i class="fas fa-calendar-check"></i> Đặt phòng
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-bed fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Không có phòng nào để hiển thị</h5>
                            <p class="text-muted">Vui lòng thử lại sau hoặc liên hệ quản trị viên.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        function viewDetails(phongId) {
            // Chuyển đến trang chi tiết phòng
            window.location.href = '@Url.Action("Details", "Phong")/' + phongId;
        }

        function bookRoom(phongId) {
            // Chuyển đến trang đặt phòng
            window.location.href = '@Url.Action("Book", "DatPhong")/' + phongId;
        }

        // Auto hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}