@model List<DPKS.Model.TienNghi.DanhSachTienNghiVm>
@{
    ViewData["Title"] = "Tiện nghi";
    ViewData["PageTitle"] = "Tiện nghi sang trọng";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <p class="text-muted">Những tiện nghi hiện đại và đầy đủ phục vụ cho kỳ nghỉ tuyệt vời của bạn</p>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger text-center" role="alert">
            @ViewBag.ErrorMessage
        </div>
    }
    else if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success text-center" role="alert">
            @ViewBag.SuccessMessage
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            Không có tiện nghi nào để hiển thị.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var amenity in Model)
            {
                <div class="col-12 col-sm-6 col-lg-4">
                    <div class="card border-0 shadow-lg h-100 rounded-4">
                        <div class="card-body p-4 d-flex flex-column align-items-start">
                            <div class="mb-3 text-primary fs-1">
                                <i class="bi bi-star-fill"></i> @* Có thể thay đổi theo amenity.Name *@
                            </div>
                            <h5 class="card-title fw-bold mb-2">@amenity.Name</h5>
                            <p class="card-text text-muted mb-0">@amenity.Description</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
