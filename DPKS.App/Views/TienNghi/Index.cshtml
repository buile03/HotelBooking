@model List<DPKS.Model.TienNghi.DanhSachTienNghiVm>
@{
    ViewData["Title"] = "Tiện nghi";
    ViewData["PageTitle"] = "Danh sách tiện nghi";
}
<div class="container py-5">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        else if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success text-center" role="alert">
                @ViewBag.SuccessMessage
            </div>
        }

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning text-center" role="alert">
                Không có tiện nghi nào để hiển thị.
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var amenity in Model)
                {
                    <!-- Map icon and badge dynamically based on Name and Type -->
                    <div class="col">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body d-flex align-items-center">
                                <div>
                                    <h5 class="card-title mb-2">@amenity.Name</h5>
                                    <p class="card-text text-muted">@amenity.Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
</div>