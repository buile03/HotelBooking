@model List<DPKS.Model.Feedback.DanhSachFeedbackVm>
@{
    ViewData["Title"] = "Feedback";
    ViewData["PageTitle"] = "Danh sách Feedback";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-11 col-xl-10">

            <!-- Filter Section -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                        <div class="card-body p-4">
                            <form asp-action="Index" method="get">
                                <div class="row g-3">
                                    <div class="col-md-6 col-lg-3">
                                        <label class="form-label fw-semibold text-dark">
                                            <i class="fas fa-star text-warning me-1"></i>Đánh giá
                                        </label>
                                        <select name="DanhGia" class="form-select rounded-3 border-2">
                                            <option value="">Tất cả đánh giá</option>
                                            <option value="5">5 ⭐</option>
                                            <option value="4">4 ⭐</option>
                                            <option value="3">3 ⭐</option>
                                            <option value="2">2 ⭐</option>
                                            <option value="1">1 ⭐</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6 col-lg-3">
                                        <label class="form-label fw-semibold text-dark">
                                            <i class="fas fa-search text-primary me-1"></i>Từ khóa
                                        </label>
                                        <input type="text" name="Keyword" class="form-control rounded-3 border-2"
                                               placeholder="Tìm theo tên, bình luận..." value="@ViewBag.Keyword">
                                    </div>
                                    <div class="col-md-6 col-lg-2">
                                        <label class="form-label fw-semibold text-dark">
                                            <i class="fas fa-calendar-alt text-success me-1"></i>Từ ngày
                                        </label>
                                        <input type="date" name="TuNgay" class="form-control rounded-3 border-2"
                                               value="@(ViewBag.TuNgay?.ToString("yyyy-MM-dd"))">
                                    </div>
                                    <div class="col-md-6 col-lg-2">
                                        <label class="form-label fw-semibold text-dark">
                                            <i class="fas fa-calendar-alt text-danger me-1"></i>Đến ngày
                                        </label>
                                        <input type="date" name="DenNgay" class="form-control rounded-3 border-2"
                                               value="@(ViewBag.DenNgay?.ToString("yyyy-MM-dd"))">
                                    </div>
                                    <div class="col-lg-2 d-flex align-items-end">
                                        <div class="d-flex gap-2 w-100">
                                            <button type="submit" class="btn btn-primary rounded-pill flex-grow-1">
                                                <i class="fas fa-search me-1"></i>Tìm
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary rounded-pill" onclick="window.location.href='@Url.Action("Index")'">
                                                <i class="fas fa-redo"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Feedback List -->
            @if (Model != null && Model.Any())
            {
                <!-- Stats Row -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card border-0 bg-primary text-white rounded-3">
                            <div class="card-body text-center py-3">
                                <div class="fw-bold fs-4">@Model.Count</div>
                                <small class="opacity-75 fw-bold">Tổng feedback</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 bg-success text-white rounded-3">
                            <div class="card-body text-center py-3">
                                <div class="fw-bold fs-4">@Model.Where(x => x.DanhGia >= 4).Count()</div>
                                <small class="opacity-75 fw-bold">Đánh giá tốt</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 bg-warning text-white rounded-3">
                            <div class="card-body text-center py-3">
                                <div class="fw-bold fs-4">@(Model.Any() ? Model.Average(x => x.DanhGia).ToString("F1") : "0")</div>
                                <small class="opacity-75 fw-bold">Điểm TB</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card border-0 bg-info text-white rounded-3">
                            <div class="card-body text-center py-3">
                                <div class="fw-bold fs-4">@Model.Where(x => x.CreateAt.Date == DateTime.Today).Count()</div>
                                <small class="opacity-75 fw-bold">Hôm nay</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Feedback Cards -->
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-12 col-md-6 col-xl-4 mb-4">
                            <div class="card border-0 border border-dark shadow-sm rounded-4 h-100 overflow-hidden hover-card">
                                <!-- Rating Header -->
                                <div class="card-header border-0 p-3 @(item.DanhGia >= 4 ? "bg-success" : item.DanhGia >= 3 ? "bg-warning" : "bg-danger") bg-opacity-10">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <div class="rating me-2">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    @if (i <= item.DanhGia)
                                                    {
                                                        <i class="fas fa-star text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star text-muted"></i>
                                                    }
                                                }
                                            </div>
                                            <span class="fw-bold @(item.DanhGia >= 4 ? "text-success" : item.DanhGia >= 3 ? "text-warning" : "text-danger")">
                                                @item.DanhGia/5
                                            </span>
                                        </div>
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>@item.CreateAt.ToString("dd/MM/yyyy")
                                        </small>
                                    </div>
                                </div>

                                <div class="card-body p-3">
                                    <!-- Customer Info -->
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-2 flex-shrink-0">
                                            <i class="fas fa-user text-primary"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold text-dark">@item.UserName</div>
                                            <small class="text-muted">Khách hàng</small>
                                        </div>
                                    </div>

                                    <!-- Room Info -->
                                    <div class="row g-2 mb-3">
                                        <div class="col-6">
                                            <div class="bg-light rounded-2 p-2 text-center">
                                                <i class="fas fa-door-open text-primary d-block mb-1"></i>
                                                <small class="text-muted d-block">Phòng</small>
                                                <span class="fw-semibold small">@item.SoPhong</span>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="bg-light rounded-2 p-2 text-center">
                                                <i class="fas fa-calendar text-success d-block mb-1"></i>
                                                <small class="text-muted d-block">Thời gian</small>
                                                <span class="fw-semibold small">
                                                    @((item.NgayTraPhong - item.NgayNhanPhong).Days) ngày
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Check-in/out dates -->
                                    <div class="row g-2 mb-3">
                                        <div class="col-12">
                                            <div class="d-flex justify-content-between align-items-center bg-light rounded-2 p-2">
                                                <div class="text-center">
                                                    <small class="text-muted d-block">Nhận phòng</small>
                                                    <span class="fw-semibold small">@item.NgayNhanPhong.ToString("dd/MM")</span>
                                                </div>
                                                <i class="fw-bold">-</i>
                                                <div class="text-center">
                                                    <small class="text-muted d-block">Trả phòng</small>
                                                    <span class="fw-semibold small">@item.NgayTraPhong.ToString("dd/MM")</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Comment -->
                                    <div class="comment-section">
                                        @if (!string.IsNullOrEmpty(item.BinhLuan))
                                        {
                                            <div class="bg-light rounded-3 p-3 mb-3">
                                                <div class="d-flex align-items-start">
                                                    <i class="fas fa-quote-left text-primary me-2 flex-shrink-0 mt-1"></i>
                                                    <p class="mb-0 small lh-base">
                                                        @(item.BinhLuan.Length > 100 ? item.BinhLuan.Substring(0, 100) + "..." : item.BinhLuan)
                                                    </p>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded-3 p-3 mb-3 text-center">
                                                <i class="fas fa-comment-slash text-muted mb-2"></i>
                                                <p class="mb-0 text-muted small fst-italic">Khách hàng không để lại bình luận</p>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <div class="card-footer bg-white border-0 p-3">
                                    <a asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-outline-primary rounded-pill w-100 btn-sm">
                                        <i class="fas fa-eye me-1"></i>Xem chi tiết
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination or Load More -->
                <div class="row">
                    <div class="col-12 text-center mt-4">
                        <div class="card border-0 bg-light rounded-3">
                            <div class="card-body py-3">
                                <div class="d-flex justify-content-center align-items-center">
                                    <i class="fas fa-info-circle text-primary me-2"></i>
                                    <span class="text-muted">
                                        Hiển thị <strong>@Model.Count</strong> feedback
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="row">
                    <div class="col-12">
                        <div class="card border-0 shadow-sm rounded-4">
                            <div class="card-body text-center py-5">
                                <div class="mb-4">
                                    <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center"
                                         style="width: 120px; height: 120px;">
                                        <i class="fas fa-comments fa-3x text-muted"></i>
                                    </div>
                                </div>
                                <h4 class="text-muted mb-3">Chưa có feedback nào</h4>
                                <p class="text-muted mb-4">
                                    Hiện tại chưa có feedback nào trong hệ thống.
                                    <br>Feedback từ khách hàng sẽ xuất hiện tại đây sau khi họ hoàn thành lưu trú.
                                </p>
                                <div class="d-flex justify-content-center gap-2">
                                    <button class="btn btn-outline-primary rounded-pill" onclick="window.location.reload()">
                                        <i class="fas fa-sync-alt me-1"></i>Làm mới
                                    </button>
                                    <a href="#" class="btn btn-primary rounded-pill">
                                        <i class="fas fa-plus me-1"></i>Tạo feedback mẫu
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

