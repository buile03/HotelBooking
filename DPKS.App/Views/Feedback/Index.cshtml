@model List<DPKS.Model.Feedback.DanhSachFeedbackVm>
@{
    ViewData["Title"] = "Feedback";
    ViewData["PageTitle"] = "Danh sách Feedback";
}

<div class="container py-4">
    <!-- Form lọc -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title mb-3">Lọc Feedback</h5>
                    <form asp-action="Index" method="get" class="row g-3">
                        <div class="col-md-2">
                            <label class="form-label">Đánh giá</label>
                            <select name="DanhGia" class="form-select">
                                <option value="">Tất cả</option>
                                <option value="1">1 sao</option>
                                <option value="2">2 sao</option>
                                <option value="3">3 sao</option>
                                <option value="4">4 sao</option>
                                <option value="5">5 sao</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Từ khóa</label>
                            <input type="text" name="Keyword" class="form-control" placeholder="Tìm theo bình luận hoặc người tạo" value="@ViewBag.Keyword">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Từ ngày</label>
                            <input type="date" name="TuNgay" class="form-control" value="@(ViewBag.TuNgay?.ToString("yyyy-MM-dd"))">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Đến ngày</label>
                            <input type="date" name="DenNgay" class="form-control" value="@(ViewBag.DenNgay?.ToString("yyyy-MM-dd"))">
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2"><i class="fas fa-filter me-1"></i> Tìm kiếm</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @* Danh sách feedback *@
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="card-title mb-0">Đánh giá: @item.DanhGia <span class="text-warning">★</span></h5>
                                <small class="text-muted">@item.CreateAt.ToString("dd/MM/yyyy")</small>
                            </div>
                            <p class="card-text text-muted mb-2">
                                <strong>Người tạo:</strong> @item.UserName
                            </p>
                            <p class="card-text text-muted mb-2">
                                <strong>Số phòng:</strong> @item.SoPhong
                            </p>
                            <p class="card-text text-muted mb-2">
                                <strong>Ngày nhận phòng:</strong> @item.NgayNhanPhong.ToString("dd/MM/yyyy")
                            </p>
                            <p class="card-text text-muted mb-3">
                                <strong>Ngày trả phòng:</strong> @item.NgayTraPhong.ToString("dd/MM/yyyy")
                            </p>
                            <p class="card-text">
                                @if (!string.IsNullOrEmpty(item.BinhLuan))
                                {
                                    <span>@item.BinhLuan</span>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Không có bình luận</span>
                                }
                            </p>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <button type="button" class="btn btn-outline-primary btn-sm w-100" onclick="window.location.href='/Feedback/Detail/@item.Id'">
                                <i class="fas fa-eye me-1"></i> Xem chi tiết
                            </button>
                        </div>
                    </div>
                </div>
            }
            <div class="col-12 text-center mt-4">
                <small class="text-muted">
                    Tổng cộng: <strong>@Model.Count</strong> feedback
                </small>
            </div>
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="card shadow-sm border-0">
                    <div class="card-body py-5">
                        <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                        <h5 class="card-title text-muted">Không có dữ liệu feedback</h5>
                        <p class="card-text text-muted">Hiện tại chưa có feedback nào trong hệ thống</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
