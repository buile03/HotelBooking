@model DPKS.Model.Feedback.FeedbackDetailVm
@{
    ViewData["Title"] = "Feedback";
    ViewData["PageTitle"] = "Chi tiết Feedback";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="/Feedback/Index" class="btn btn-outline-light btn-sm">
                                <i class="fas fa-arrow-left me-1"></i>Quay lại
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border-0 bg-light">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0"><i class="fas fa-user me-2"></i>Thông tin khách hàng</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-4"><strong>Tên:</strong></div>
                                        <div class="col-sm-8">@Model.UserName</div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-4"><strong>Email:</strong></div>
                                        <div class="col-sm-8">@Model.Email</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card border-0 bg-light">
                                <div class="card-header bg-success text-white">
                                    <h6 class="mb-0"><i class="fas fa-bed me-2"></i>Thông tin đặt phòng</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-4"><strong>Phòng:</strong></div>
                                        <div class="col-sm-8">
                                            <span class="badge bg-info">@Model.Type</span>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-4"><strong>Nhận phòng:</strong></div>
                                        <div class="col-sm-8">@Model.NgayNhanPhong.ToString("dd/MM/yyyy")</div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-4"><strong>Trả phòng:</strong></div>
                                        <div class="col-sm-8">@Model.NgayTraPhong.ToString("dd/MM/yyyy")</div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-4"><strong>Tổng tiền:</strong></div>
                                        <div class="col-sm-8">
                                            <span class="fw-bold text-success">@Model.TongTien.ToString("N0") VNĐ</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card border-0 bg-light">
                                <div class="card-header bg-warning text-dark">
                                    <h6 class="mb-0"><i class="fas fa-star me-2"></i>Đánh giá & Bình luận</h6>
                                </div>
                                <div class="card-body">
                                    <div class="row mb-3">
                                        <div class="col-sm-2"><strong>Đánh giá:</strong></div>
                                        <div class="col-sm-10">
                                            <div class="rating d-flex align-items-center">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    @if (i <= Model.DanhGia)
                                                    {
                                                        <i class="fas fa-star text-warning fs-5"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="far fa-star text-muted fs-5"></i>
                                                    }
                                                }
                                                <span class="ms-2 fw-bold">(@Model.DanhGia/5)</span>
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-2"><strong>Bình luận:</strong></div>
                                        <div class="col-sm-10">
                                            <div class="bg-white p-3 rounded border">
                                                @Model.BinhLuan
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-2"><strong>Ngày tạo:</strong></div>
                                        <div class="col-sm-10">
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>
                                                @Model.CreateAt.ToString("dd/MM/yyyy HH:mm:ss")
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>