@model DPKS.Model.Feedback.FeedbackDetailVm
@{
    ViewData["Title"] = "Feedback";
    ViewData["PageTitle"] = "Chi tiết Feedback";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            @* <!-- Header với breadcrumb -->
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb bg-light rounded-pill px-4 py-3 shadow-sm">
                    <li class="breadcrumb-item">
                        <a href="#" class="text-decoration-none text-primary">
                            <i class="fas fa-home me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="/Feedback/Index" class="text-decoration-none text-primary">Feedback</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Chi tiết</li>
                </ol>
            </nav> *@

            <!-- Main Card -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                @* <!-- Header -->
                <div class="card-header bg-gradient border-0 p-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="/Feedback/Index" class="btn btn-light btn-lg rounded-pill px-4 shadow-sm">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại
                        </a>
                    </div>
                </div> *@

                <div class="card-body p-0">
                    <!-- Customer & Booking Info Row -->
                    <div class="row g-0">
                        <!-- Customer Info -->
                        <div class="col-md-6 border-end">
                            <div class="p-4">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                        <i class="fas fa-user text-primary fs-4"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0 fw-bold text-primary">Thông tin khách hàng</h5>
                                        <small class="text-muted">Customer Information</small>
                                    </div>
                                </div>

                                <div class="row g-3">
                                    <div class="col-12">
                                        <div class="bg-light rounded-3 p-3">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-user-circle text-primary me-2"></i>
                                                <div>
                                                    <small class="text-muted d-block">Tên khách hàng</small>
                                                    <span class="fw-semibold">@Model.UserName</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="bg-light rounded-3 p-3">
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-envelope text-primary me-2"></i>
                                                <div>
                                                    <small class="text-muted d-block">Email</small>
                                                    <span class="fw-semibold">@Model.Email</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Booking Info -->
                        <div class="col-md-6">
                            <div class="p-4">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="bg-success bg-opacity-10 rounded-circle p-3 me-3">
                                        <i class="fas fa-bed text-success fs-4"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-0 fw-bold text-success">Thông tin đặt phòng</h5>
                                        <small class="text-muted">Booking Information</small>
                                    </div>
                                </div>

                                <div class="row g-3">
                                    <div class="col-12">
                                        <div class="bg-light rounded-3 p-3">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-door-open text-success me-2"></i>
                                                    <div>
                                                        <small class="text-muted d-block">Loại phòng</small>
                                                        <span class="fw-semibold">@Model.Type</span>
                                                    </div>
                                                </div>
                                                <span class="badge bg-success rounded-pill">Premium</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="bg-light rounded-3 p-3">
                                            <div class="text-center">
                                                <i class="fas fa-calendar-check text-success d-block mb-1"></i>
                                                <small class="text-muted d-block">Nhận phòng</small>
                                                <span class="fw-bold">@Model.NgayNhanPhong.ToString("dd/MM/yyyy")</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="bg-light rounded-3 p-3">
                                            <div class="text-center">
                                                <i class="fas fa-calendar-times text-danger d-block mb-1"></i>
                                                <small class="text-muted d-block">Trả phòng</small>
                                                <span class="fw-bold">@Model.NgayTraPhong.ToString("dd/MM/yyyy")</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="bg-gradient rounded-3 p-3 text-center" style="background: linear-gradient(45deg, #28a745, #20c997);">
                                            <i class="fas fa-money-bill-wave text-white d-block mb-1 fs-5"></i>
                                            <small class="text-white d-block opacity-75">Tổng tiền</small>
                                            <span class="text-white fw-bold fs-4">@Model.TongTien.ToString("N0") VNĐ</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Rating & Review Section -->
                    <div class="bg-light border-top">
                        <div class="p-4">
                            <div class="d-flex align-items-center mb-4">
                                <div class="bg-warning bg-opacity-10 rounded-circle p-3 me-3">
                                    <i class="fas fa-star text-warning fs-4"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0 fw-bold text-warning">Đánh giá & Bình luận</h5>
                                    <small class="text-muted">Customer Rating & Review</small>
                                </div>
                            </div>

                            <!-- Rating Display -->
                            <div class="row g-4">
                                <div class="col-md-4">
                                    <div class="card border-0 bg-white shadow-sm rounded-3">
                                        <div class="card-body text-center py-4">
                                            <div class="mb-3">
                                                <div class="display-4 fw-bold text-warning mb-2">@Model.DanhGia.0</div>
                                                <div class="rating mb-2">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        @if (i <= Model.DanhGia)
                                                        {
                                                            <i class="fas fa-star text-warning fs-5"></i>
                                                        }
                                                        else
                                                        {
                                                            <i class="far fa-star text-muted fs-5"></i>
                                                        }
                                                    }
                                                </div>
                                                <small class="text-muted">trên 5 sao</small>
                                            </div>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-warning" role="progressbar"
                                                     style="width: @(Model.DanhGia * 20)%"
                                                     aria-valuenow="@(Model.DanhGia * 20)"
                                                     aria-valuemin="0"
                                                     aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-8">
                                    <div class="card border-0 bg-white shadow-sm rounded-3">
                                        <div class="card-body">
                                            <div class="d-flex align-items-start">
                                                <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3 flex-shrink-0">
                                                    <i class="fas fa-quote-left text-primary"></i>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <p class="mb-3 fs-6 lh-base">@Model.BinhLuan</p>
                                                    <div class="d-flex align-items-center text-muted">
                                                        <i class="fas fa-clock me-2"></i>
                                                        <small>@Model.CreateAt.ToString("dd/MM/yyyy HH:mm:ss")</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>